<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespache是绑定一个对应的dao或者mapper接口-->
<mapper namespace="com.me7eorite.mapper.MenuMapper">
    <select id="queryMenuAllList" resultType="com.me7eorite.entity.Menu">
        select * from expriment.sys_menu
    </select>

    <select id="queryMenuBySid" resultType="com.me7eorite.entity.Menu">
        select distinct t1.* from
            sys_menu t1 inner join sys_role_menu t2 inner join sys_role_user t3 inner join sys_role t4
                                                                                           on(t1.id=t2.mid and t2.rid=t3.rid and t2.rid=t4.roleid)
        where t3.uid=#{uid} and t1.available=1 and t4.available=1
    </select>

</mapper>
